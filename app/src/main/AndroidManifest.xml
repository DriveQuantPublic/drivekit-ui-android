<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.drivekit.drivekitdemoapp">

    <application
        android:name="com.drivekit.demoapp.DriveKitDemoApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="com.drivekit.demoapp.dashboard.activity.DashboardActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="false"/>
        <activity
            android:name="com.drivekit.demoapp.onboarding.activity.ApiKeyActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.drivekit.demoapp.features.activity.FeatureListActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="false">
        </activity>
        <activity android:name="com.drivekit.demoapp.activity.SettingsActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity android:name="com.drivekit.demoapp.activity.SynthesisCardExampleActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity"  />
        <activity android:name="com.drivekit.demoapp.activity.LastTripsCardActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity"  />

        <activity
            android:name="com.drivekit.demoapp.onboarding.activity.UserInfoActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.drivekit.demoapp.onboarding.activity.UserIdActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.drivekit.demoapp.onboarding.activity.PermissionsActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.drivekit.demoapp.onboarding.activity.VehiclesActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>
</manifest>