<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/global_config_settings">

        <EditTextPreference
            app:key="user_id"
            app:title="@string/user_id_pref"
            app:icon="@drawable/ic_user"
            app:defaultValue=""
            />

        <SwitchPreferenceCompat
            app:key="logging"
            app:summaryOff="@string/enable_logging_pref_off"
            app:summaryOn="@string/enable_logging_pref_on"
            app:title="@string/enable_logging_pref"
            app:icon="@drawable/ic_logging"
            app:defaultValue="false" />

        <!-- <SwitchPreferenceCompat
            app:key="sandbox_mode"
            app:summaryOff="@string/sandbox_mode_pref_off"
            app:summaryOn="@string/sandbox_mode_pref_on"
            app:title="@string/sandbox_mode_pref"
            app:icon="@drawable/ic_sandbox_mode"
            app:defaultValue="false" /> -->

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/trip_analysis_settings">

        <SwitchPreferenceCompat
            app:key="autostart"
            app:summaryOff="@string/autostart_pref_off"
            app:summaryOn="@string/autostart_pref_on"
            app:title="@string/autostart_pref"
            app:icon="@drawable/ic_autostart"
            app:defaultValue="false" />

        <SeekBarPreference
            app:key="stop_timeout"
            app:defaultValue="@integer/seek_bar_default"
            android:max="@integer/seek_bar_max"
            app:min="@integer/seek_bar_min"
            app:title="@string/stop_timeout_pref"
            app:showSeekBarValue="true"
            app:icon="@drawable/ic_stop_timeout"/>

        <SwitchPreferenceCompat
            app:key="beacon_required"
            app:summaryOff="@string/beacon_required_pref_off"
            app:summaryOn="@string/beacon_required_pref_on"
            app:title="@string/beacon_required_pref"
            app:icon="@drawable/ic_beacon_required"
            app:defaultValue="false" />

        <SwitchPreferenceCompat
            app:key="add_beacon"
            app:summaryOff="@string/add_beacon_pref_off"
            app:summaryOn="@string/add_beacon_pref_on"
            app:title="@string/add_beacon_pref"
            app:icon="@drawable/ic_beacon_configured"
            app:defaultValue="false" />

        <SwitchPreferenceCompat
            app:key="enable_share_position"
            app:summaryOff="@string/enable_share_position_pref_off"
            app:summaryOn="@string/enable_share_position_pref_on"
            app:title="@string/enable_share_position_pref"
            app:icon="@drawable/ic_enable_share_position"
            app:defaultValue="true" />

    </PreferenceCategory>
</PreferenceScreen>
