<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.drivekit.demoapp.onboarding.activity.UserIdActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/dk_layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dk_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dk_margin"
                android:layout_weight="2"
                android:text="@string/authentication_title"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dk_text_medium"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_view_info"
                android:layout_width="@dimen/dk_ic_small"
                android:layout_height="@dimen/dk_ic_small"
                android:contentDescription="image"
                android:src="@drawable/dk_common_info"
                app:tint="@color/colorAccent" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dk_margin"
            android:text="@string/authentication_description" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dk_margin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_view_user_id_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/authentication_unique_identifier"
                android:inputType="textPersonName"
                android:textSize="@dimen/dk_text_normal" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/button_validate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="@string/dk_common_validate"
            android:textAllCaps="true"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>