<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dk_margin">

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/image_view_arrow"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dk_text_medium" />

        <ImageView
            android:id="@+id/image_view_arrow"
            android:layout_width="@dimen/dk_ic_big"
            android:layout_height="@dimen/dk_ic_big"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="7dp"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dk_margin_quarter"
            android:paddingBottom="@dimen/dk_margin_quarter"
            android:src="@drawable/dk_common_arrow_forward" />

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_title"
            android:layout_marginEnd="56dp"
            android:textColor="@color/complementaryFontColor" />
    </RelativeLayout>

    <View style="@style/Separator.Horizontal" />
</LinearLayout>
