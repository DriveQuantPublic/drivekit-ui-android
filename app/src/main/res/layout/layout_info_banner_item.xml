<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:elevation="@dimen/dk_margin_half"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="@dimen/dk_margin_half"
        android:weightSum="1">

        <ImageView
            android:id="@+id/image_view_info_banner_icon"
            android:layout_width="0dp"
            android:layout_height="@dimen/dk_ic_big"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="0.15"
            tools:src="@drawable/ic_feature_permissionsutils" />

        <TextView
            android:id="@+id/text_view_info_banner_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dk_margin_half"
            android:layout_marginRight="@dimen/dk_margin_half"
            android:layout_weight="0.7"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            tools:text="@string/info_banner_diagnosis_title" />

        <ImageView
            android:id="@+id/image_view_info_banner_arrow"
            android:layout_width="0dp"
            android:layout_height="@dimen/dk_ic_big"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="0.15"
            android:paddingTop="@dimen/dk_margin_quarter"
            android:paddingBottom="@dimen/dk_margin_quarter"
            android:visibility="gone"
            tools:src="@drawable/dk_common_arrow_forward"
            tools:visibility="visible" />
    </LinearLayout>

    <View style="@style/Separator.Horizontal" />
</LinearLayout>
