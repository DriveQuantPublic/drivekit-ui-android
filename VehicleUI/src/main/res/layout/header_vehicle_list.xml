<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linear_layout_header_vehicle_list"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dk_margin_half"
    android:layout_marginBottom="@dimen/dk_margin_half"
    android:padding="@dimen/dk_margin_half"
    android:visibility="gone">
    <ImageView
        android:id="@+id/text_view_summary_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="@dimen/dk_margin_half"
        android:layout_gravity="center_vertical"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dk_margin_half"
        android:layout_marginRight="@dimen/dk_margin_half"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_view_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Medium"/>
    </LinearLayout>
</LinearLayout>