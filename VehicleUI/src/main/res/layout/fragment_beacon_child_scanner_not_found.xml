<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dk_margin_half" />

    <ImageView
        android:id="@+id/button_retry"
        android:layout_width="@dimen/dk_ic_medium"
        android:layout_height="@dimen/dk_ic_medium"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dk_margin_half" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dk_margin"
        android:layout_marginTop="@dimen/dk_margin_medium"
        android:layout_marginEnd="@dimen/dk_margin"
        android:foreground="?android:attr/selectableItemBackground" />

    <TextView
        android:id="@+id/button_abort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dk_margin_medium"
        android:gravity="center" />
</LinearLayout>
