<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dk_screen_border"
    android:weightSum="1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".bluetooth.activity.BluetoothActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_congrats_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dk_margin"
                android:gravity="center"
                android:paddingTop="@dimen/dk_margin"
                android:text="@string/dk_vehicle_bluetooth_congrats_title"
                android:textColor="@color/mainFontColor" />

            <TextView
                android:id="@+id/text_view_congrats_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dk_margin"
                android:gravity="center"
                android:paddingTop="@dimen/dk_margin_quarter"
                android:textColor="@color/mainFontColor"
                tools:text="This is a description text lorem" />

            <ImageView
                android:id="@+id/image_view_success"
                android:layout_width="152dp"
                android:layout_height="152dp"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/dk_margin"
                android:src="@drawable/dk_thumbs_up" />

            <TextView
                android:id="@+id/text_view_congrats_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dk_margin"
                android:gravity="center"
                android:paddingTop="@dimen/dk_margin"
                android:textColor="@color/mainFontColor" />

            <androidx.compose.ui.platform.ComposeView
                android:id="@+id/button_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dk_margin_half" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
