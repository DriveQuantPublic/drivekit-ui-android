<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alert_dialog_container"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/alert_dialog_header"
        android:background="#0B4D6E"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center_vertical"
        android:text="HC Title"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/alert_dialog_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:textAlignment="center"
        tools:text="HC description"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <View style="@style/Separator.Horizontal" />
        <TextView
            android:id="@+id/text_view_verify"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_margin="4dp"
            android:textColor="#0B4D6E"
            android:textStyle="bold"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="HC Verify"/>
        <View style="@style/Separator.Horizontal" />
        <TextView
            android:id="@+id/text_view_replace"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_margin="4dp"
            android:textColor="#0B4D6E"
            android:textStyle="bold"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="HC replace"/>
        <View style="@style/Separator.Horizontal" />
        <TextView
            android:id="@+id/text_view_delete"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_margin="4dp"
            android:textColor="#0B4D6E"
            android:textStyle="bold"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="HC delete"/>
    </LinearLayout>
</LinearLayout>