<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_alert_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:padding="@dimen/dk_margin_half"
        android:paddingLeft="@dimen/dk_margin"
        android:paddingRight="@dimen/dk_margin"
        android:textAlignment="center"
        tools:text="Header title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dk_margin_half"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_alert_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dk_margin_half"
            tools:text="Description text" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:longClickable="false"
            android:maxLines="2"
            android:padding="@dimen/dk_margin_half"
            android:scrollbars="vertical" />
    </LinearLayout>
</LinearLayout>