<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">

    <TextView
        android:id="@+id/text_view_alert_title"
        style="@style/Headline1.Primary"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/primaryColor"
        android:gravity="center"
        android:padding="@dimen/dk_margin_half"
        android:paddingLeft="@dimen/dk_margin"
        android:paddingRight="@dimen/dk_margin"
        android:textColor="@color/fontColorOnPrimaryColor"
        tools:text="Header title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dk_margin_half"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dk_screen_border">

        <TextView
            android:id="@+id/text_view_alert_description"
            style="@style/NormalText.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dk_margin_half"
            android:textColor="@color/mainFontColor"
            tools:text="Description text" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:longClickable="false"
            android:maxLines="2"
            android:padding="@dimen/dk_margin_half"
            android:scrollbars="vertical" />
    </LinearLayout>
</LinearLayout>
