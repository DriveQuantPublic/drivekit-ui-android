<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dk_margin"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:id="@+id/challenge_layout_rules"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/challenge_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/dk_margin_half">

                <TextView
                    android:id="@+id/text_view_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dk_margin"
                    android:layout_marginBottom="@dimen/dk_margin_quarter"
                    android:gravity="center"
                    android:textSize="26sp"
                    tools:text="King of eco-driving" />

                <TextView
                    android:id="@+id/text_view_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dk_margin_half"
                    tools:text="18/02/2017 - 22/02/2017" />

                <TextView
                    android:id="@+id/view_separator"
                    style="@style/Separator.Horizontal"
                    android:layout_marginTop="@dimen/dk_margin_half"
                    android:layout_marginBottom="@dimen/dk_margin_half" />

                <TextView
                    android:id="@+id/text_view_rules"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:gravity="center"
                    android:padding="@dimen/dk_margin_half"
                    tools:text="Text Rules" />

                <TextView
                    android:id="@+id/view_separator_1"
                    style="@style/Separator.Horizontal"
                    android:layout_marginTop="@dimen/dk_margin_half"
                    android:layout_marginBottom="@dimen/dk_margin_half" />

                <TextView
                    android:id="@+id/text_view_conditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dk_margin"
                    android:gravity="center"
                    android:padding="@dimen/dk_margin_half"
                    android:visibility="gone"
                    tools:text="Conditions"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/text_view_challenge_rule_consult"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/dk_challenge_consult_rule_button"
                    android:textAlignment="center"
                    android:visibility="gone"
                    tools:text="Voir le rÃ¨glement"
                    tools:visibility="visible" />

                <LinearLayout
                    android:id="@+id/container_conditions_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dk_margin_half"
                    android:background="@color/dkGood"
                    android:padding="@dimen/dk_margin"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/text_view_conditions_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dk_challenge_unranked_conditions_info"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/progress_circular"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_join_challenge"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/dkGaugeBackColor"
            android:gravity="center"
            android:text="@string/dk_challenge_registered_confirmation"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/timer_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dk_margin"
            android:visibility="gone">

            <TextView
                android:id="@+id/challenge_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="@dimen/dk_margin"
                android:paddingRight="@dimen/dk_margin"
                android:text="@string/dk_challenge_start"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/text_view_countdown"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:paddingLeft="@dimen/dk_margin"
                android:paddingTop="@dimen/dk_margin_half"
                android:paddingRight="@dimen/dk_margin"
                android:textColor="@android:color/black"
                tools:text="bonjodfdfdfdfdfdfur" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>