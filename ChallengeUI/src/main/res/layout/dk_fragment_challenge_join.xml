<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.drivequant.drivekit.challenge.ui.joinchallenge.activity.ChallengeJoinActivity">

    <ScrollView
        android:id="@+id/challenge_layout_rules"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/challenge_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dk_margin_half">

            <TextView
                android:id="@+id/text_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dk_margin"
                android:gravity="center"
                tools:text="King of eco-driving" />

            <TextView
                android:id="@+id/text_view_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dk_margin_half"
                tools:text="18/02/2017 - 22/02/2017" />

            <TextView
                android:id="@+id/view_separator"
                style="@style/Separator.Horizontal"
                android:layout_marginTop="@dimen/dk_margin_half" />

            <TextView
                android:id="@+id/text_view_rules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:gravity="center"
                android:padding="@dimen/dk_margin_half"
                tools:text="Text Rules" />

            <TextView
                android:id="@+id/view_separator_1"
                style="@style/Separator.Horizontal"
                android:layout_marginTop="@dimen/dk_margin_half" />

            <TextView
                android:id="@+id/text_view_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dk_margin"
                android:gravity="center"
                android:padding="@dimen/dk_margin_half"
                android:visibility="gone"
                tools:text="Conditions"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/text_view_challenge_rule_consult"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="@string/dk_challenge_consult_rule_button"
                android:textAlignment="center"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="Voir le rÃ¨glement"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/container_conditions_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dk_margin_half"
                android:background="@color/dkGood"
                android:padding="@dimen/dk_margin"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dk_challenge_unranked_conditions_info"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/text_view_registered_confirmation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dkGaugeBackColor"
        android:gravity="center"
        android:text="@string/dk_challenge_registered_confirmation"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible"/>
</LinearLayout>
