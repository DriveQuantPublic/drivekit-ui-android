<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dk_margin"
    android:baselineAligned="false">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view_circle_indicator"
                android:layout_width="@dimen/dk_margin"
                android:layout_height="@dimen/dk_margin"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dk_margin_half"
                android:background="@drawable/dk_secondary_color_circle"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/spinner_settings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dk_margin_quarter" />
        </LinearLayout>

        <TextView
            android:id="@+id/spinner_settings_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dk_margin_quarter"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/spinner_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end">
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:gravity="center_vertical|start" />
    </LinearLayout>
</LinearLayout>