<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dk_margin">

        <!-- TODO: style="@style/SettingTitleStyle" -->
        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="text Ã  retirer"
            tools:text="Description"
            android:layout_alignLeft="@id/switch_view"
            android:layout_alignTop="@+id/switch_view"
            android:layout_toLeftOf="@id/switch_view"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center"/>

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Description"
            android:layout_below="@+id/text_view_title"
            android:layout_marginRight="56dp"/>
    </RelativeLayout>
    <View style="@style/Separator.Horizontal"/>
</LinearLayout>
