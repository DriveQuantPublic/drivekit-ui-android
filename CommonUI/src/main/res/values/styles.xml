<resources>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Separator">
    </style>

    <style name="Separator.Horizontal" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dk_separator_stroke</item>
    </style>

    <style name="Separator.Vertical" parent="Separator">
        <item name="android:layout_width">@dimen/dk_separator_stroke</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="DKButton">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/fontColorOnSecondaryColor</item>
        <item name="android:textSize">@dimen/dk_text_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DKButton.Secondary" parent="DKButton">
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:background">@drawable/dk_test</item>
    </style>

    <style name="DKCard">
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/white</item>
        <item name="elevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="DKCard.NoElevation" parent="DKCard">
        <item name="cardElevation">0dp</item>
    </style>

    <style name="MW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MM">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog"/>

    <style name="GaugeTripDetail" >
        <item name="strokeSize">9dp</item>
        <item name="backColor">@color/dkGaugeBackColor</item>
        <item name="textSize">20sp</item>
    </style>

    <style name="GaugeSynthesisCard" >
        <item name="strokeSize">10dp</item>
        <item name="backColor">@color/dkGaugeBackColor</item>
        <item name="textSize">@dimen/dk_text_xbig</item>
    </style>

    <style name="SynthesisCardInfo" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dk_margin</item>
        <item name="android:layout_marginStart">@dimen/dk_margin</item>
        <item name="textSize">@dimen/dk_text_normal</item>
    </style>

    <style name="GaugeTripList">
        <item name="android:layout_height">@dimen/dk_ic_big</item>
        <item name="android:layout_width">@dimen/dk_ic_big</item>
        <item name="strokeSize">4dp</item>
        <item name="backColor">@color/dkGaugeBackColor</item>
        <item name="textSize">12sp</item>
    </style>

    <style name="Error_Appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/dkVeryBad</item>
        <item name="android:textSize">@dimen/dk_text_small</item>
    </style>

    <!-- Used for RangeSlider-->
    <style name="SliderStyle" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/TooltipStyle</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>
    <style name="TooltipStyle" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/dkGood</item>
    </style>
    <style name="ThemeOverlay.Slider" parent="">
        <item name="colorOnPrimary">@color/dkGood</item>
        <item name="colorOnBackground">@color/dkGaugeBackColor</item>
        <item name="colorSurface">@color/dkGood</item>
    </style>
</resources>
