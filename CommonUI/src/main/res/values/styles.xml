<resources>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Separator">
    </style>

    <style name="Separator.Horizontal" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dk_separator_stroke</item>
    </style>

    <style name="Separator.Vertical" parent="Separator">
        <item name="android:layout_width">@dimen/dk_separator_stroke</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ButtonText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/dk_text_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DKCard">
        <item name="android:layout_margin">@dimen/dk_margin_half</item>
        <item name="android:padding">@dimen/dk_margin_half</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/white</item>
        <item name="elevation">@dimen/dk_margin_quarter</item>
    </style>

    <style name="MW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MM">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog"/>

    <style name="GaugeTripDetail" >
        <item name="strokeSize">9dp</item>
        <item name="backColor">@color/dkGaugeBackColor</item>
        <item name="textSize">20sp</item>
    </style>

    <style name="GaugeTripList">
        <item name="android:layout_height">@dimen/dk_ic_big</item>
        <item name="android:layout_width">@dimen/dk_ic_big</item>
        <item name="strokeSize">4dp</item>
        <item name="backColor">@color/dkGaugeBackColor</item>
        <item name="textSize">12sp</item>
    </style>

    <style name="Error_Appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/dkVeryBad</item>
        <item name="android:textSize">@dimen/dk_text_small</item>
    </style>
</resources>
