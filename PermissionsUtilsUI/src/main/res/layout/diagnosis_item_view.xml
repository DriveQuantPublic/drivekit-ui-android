<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view_diagnosis"
        android:layout_width="@dimen/dk_ic_xxbig"
        android:layout_height="@dimen/dk_ic_xxbig"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/dk_margin_half" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dk_margin_half"
        android:layout_marginRight="@dimen/dk_margin_half"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_diagnosis_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location" />

        <TextView
            android:id="@+id/text_view_diagnosis_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="En savoir +" />
    </LinearLayout>
</LinearLayout>