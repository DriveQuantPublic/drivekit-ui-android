<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dk_margin_half"
    app:cardCornerRadius="@dimen/dk_margin_half"
    card_view:cardElevation="@dimen/dk_margin_quarter">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dk_margin_half">

        <ImageView
            android:id="@+id/image_view_streak_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/dk_distraction_filled"
            app:layout_constraintEnd_toStartOf="@+id/text_view_streak_title"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_streak_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/dk_streaks_acceleration_title"
            android:textSize="@dimen/dk_text_medium"
            android:textStyle="bold"
            android:paddingTop="@dimen/dk_margin_quarter"
            app:layout_constraintEnd_toStartOf="@+id/image_view_info"
            app:layout_constraintStart_toEndOf="@+id/image_view_streak_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_view_info"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/dk_streak_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_view_streak_title"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- //TODO create all styles -->
        <TextView
            android:id="@+id/line_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dk_margin_half"
            android:background="@color/separatorColor"
            app:layout_constraintTop_toBottomOf="@+id/image_view_streak_icon" />


        <TextView
            android:id="@+id/current_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dk_margin_half"
            android:text="@string/dk_streaks_current_title"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/dk_text_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_separator" />


        <TextView
            android:id="@+id/text_view_current_streak_trip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dk_margin_half"
            android:text="345 trajet - 4583 km - 3j 9h 30 min"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/dk_text_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_title" />

        <TextView
            android:id="@+id/text_view_current_streak_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dk_margin_quarter"
            android:text="Du 02/04/2020 au 23/04/2020"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/dk_text_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_current_streak_trip" />

        <TextView
            android:id="@+id/line_separator_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dk_margin_half"
            android:background="@color/separatorColor"
            app:layout_constraintTop_toBottomOf="@+id/text_view_current_streak_date" />

        <TextView
            android:id="@+id/best_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dk_margin_half"
            android:text="@string/dk_streaks_best_title"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/dk_text_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_separator_2" />

        <TextView
            android:id="@+id/text_view_best_streak_trip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dk_margin_half"
            android:text="345 trajet - 4583 km - 3j 9h 30 min"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/dk_text_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/best_title" />

        <TextView
            android:id="@+id/text_view_best_streak_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dk_margin_quarter"
            android:text="Du 02/04/2020 au 23/04/2020"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/dk_text_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_best_streak_trip" />

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dk_margin_medium"
            android:gravity="center_vertical"
            android:max="102"
            android:layout_marginBottom="@dimen/dk_margin_eigth"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_view_nb_current_trip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_best_streak_date" />

        <TextView
            android:id="@+id/text_view_nb_current_trip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edges"
            android:gravity="center"
            android:text="345"
            android:textSize="@dimen/dk_text_medium_big"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.15" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>