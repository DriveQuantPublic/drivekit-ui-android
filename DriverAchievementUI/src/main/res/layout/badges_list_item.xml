<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <TextView
        android:text="Nombre de trajet"
        android:id="@+id/text_view_badge_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/text_view_badge_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.drivequant.drivekit.common.ui.component.GaugeImage
                android:id="@+id/badge_silver"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:gaugeStrokeSize="@dimen/dk_margin_half" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOLA" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.drivequant.drivekit.common.ui.component.GaugeImage
                android:id="@+id/badge_bronze"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:gaugeStrokeSize="@dimen/dk_margin_half" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hola" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.drivequant.drivekit.common.ui.component.GaugeImage
                android:id="@+id/badge_gold"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:gaugeStrokeSize="@dimen/dk_margin_half" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HOLA" />
        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
