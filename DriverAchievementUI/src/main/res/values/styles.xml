<resources>
    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    </style>

    <style name="StreakTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dk_text_medium</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="StreakSubTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/dk_text_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StreakDataStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/dk_text_small</item>
    </style>

    <style name="TripsCount">
        <item name="android:textSize">@dimen/dk_text_medium_big</item>
        <item name="android:textColor">@color/dk_gray500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_edges</item>
    </style>

    <style name="SeekBar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:max">102</item>
    </style>

    <style name="Separator">
        <item name="android:background">@color/dk_separator_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
</resources>
