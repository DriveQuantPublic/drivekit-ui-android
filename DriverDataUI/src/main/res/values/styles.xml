<resources>
    <style name="TripMainValue">
        <item name="android:textColor">@color/dkPrimaryColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TripListHour">
        <item name="android:textColor">@color/dkMainFontColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TripListCity">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GaugeTitleTripDetail">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TripDetailDescriptionText">
        <item name="android:textColor">@color/dkMainFontColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">@dimen/dk_margin_half</item>
        <item name="android:layout_marginEnd">@dimen/dk_margin_half</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="EventNumberText">
        <item name="android:textColor">@color/dkPrimaryColor</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="UnitText">
        <item name="android:textColor">@color/dkMainFontColor</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
