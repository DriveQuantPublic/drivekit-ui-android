<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_trip_advice_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="32dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/text_view_advice_header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="@dimen/dk_margin_half"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        tools:text="Title header"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            style="@style/NormalText"
            android:id="@+id/text_view_advice_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dk_margin_half"
            tools:text="Trip advice text"/>
    </ScrollView>
    <include
        layout="@layout/view_trip_advice_feedback_buttons"/>
</LinearLayout>