<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/dk_speech_bubble"
    android:paddingBottom="15dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/text_view_time"
        style="@style/SmallText"
        android:textAlignment="center"
        android:padding="4dp"
        android:gravity="center"
        android:layout_marginStart="@dimen/dk_margin_half"
        android:layout_marginEnd="@dimen/dk_margin_half"
        tools:text="9h42" />

    <LinearLayout
        android:id="@+id/layout_bubble_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="4dp">
        <TextView android:id="@+id/bubble_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Headline2"
            android:textColor="@color/dkPrimaryColor"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_gravity="start"
            tools:text="Title" />
        <TextView android:id="@+id/bubble_description"
            android:layout_width="wrap_content"
            android:maxWidth="200dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            style="@style/SmallText"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="Description" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/bubble_more_info"
        android:padding="4dp"
        android:layout_gravity="center"
        android:background="@drawable/dk_common_info"
        app:backgroundTint="@color/dkSecondaryColor"
        android:visibility="gone"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        tools:visibility="visible"/>
</LinearLayout>
